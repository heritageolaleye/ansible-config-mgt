pipeline {
    agent any

    stages {

        // Step 1: Cleanup workspace
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }

        // Step 2: Checkout code from GitHub
        stage('Checkout SCM') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-token',
                    url: 'https://github.com/heritageolaleye/php-todo.git'
            }
        }

        // Step 3: Install dependencies and prepare environment
        stage('Install Dependencies') {
            steps {
                sh '''
                cp .env.sample .env || true

                mkdir -p bootstrap/cache
                mkdir -p storage/framework/{sessions,views,cache} storage/logs
                chmod -R 777 storage bootstrap/cache

                composer install --no-interaction --prefer-dist

                php artisan key:generate
                php artisan config:clear
                php artisan cache:clear
                '''
            }
        }

        // Step 4: Execute Unit Tests
        stage('Execute Unit Tests') {
            steps {
                sh '''
                mkdir -p storage/framework/{sessions,views,cache}
                chmod -R 777 storage/framework

                ./vendor/bin/phpunit
                '''
            }
        }

        // Step 5: Code Analysis using PHPLoc
        stage('Code Analysis') {
            steps {
                sh '''
                mkdir -p build/logs

                if [ ! -f ./vendor/bin/phploc ]; then
                    composer require --dev phploc/phploc
                fi

                ./vendor/bin/phploc app/ --log-csv build/logs/phploc.csv
                '''
            }
        }

        // Step 6: Plot PHPLoc Historical Graphs
        stage('Plot Code Metrics') {
            steps {
                plot csvFileName: 'phploc.csv',
                     csvSeries: [[file: 'build/logs/phploc.csv']],
                     group: 'phploc',
                     style: 'line',
                     numBuilds: '100',
                     title: 'PHPLoc â€“ Historical Code Metrics',
                     yaxis: 'Metrics'
            }
        }

        // Step 7: SonarQube Analysis (LAST)
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQubeServer') {
                    sh '''
                    sonar-scanner \
                      -Dsonar.projectKey=php-todo \
                      -Dsonar.projectName=php-todo \
                      -Dsonar.projectVersion=1.0 \
                      -Dsonar.sources=app \
                      -Dsonar.language=php \
                      -Dsonar.sourceEncoding=UTF-8
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}








