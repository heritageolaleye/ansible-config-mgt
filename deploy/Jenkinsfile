pipeline {
    agent any

    environment {
        ANSIBLE_CONFIG = "${WORKSPACE}/deploy/ansible.cfg"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sshagent(credentials: ['ansible-ssh-key']) {
                    sh '''
                      ansible-playbook \
                      -i inventory/ci/hosts \
                      playbooks/site.yml
                    '''
                }
            }
        }
    }
}
