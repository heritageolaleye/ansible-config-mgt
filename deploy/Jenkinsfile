pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'DEPLOY_TO_DEV',
            defaultValue: false,
            description: 'Deploy application to Dev environment'
        )
    }

    stages {
        stage("Initial cleanup") {
            steps {
                deleteDir()
            }
        }

        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/heritageolaleye/php-todo.git'
            }
        }

        stage('Prepare Dependencies') {
            steps {
                sh '''
                    cp .env.sample .env || true
                    mkdir -p bootstrap/cache
                    mkdir -p storage/framework/{sessions,views,cache} storage/logs
                    chmod -R 777 storage

                    composer config audit.block-insecure false
                    composer install --no-interaction --prefer-dist
                    composer require --dev phploc/phploc --no-interaction || true

                    php artisan key:generate
                    php artisan config:clear
                    php artisan cache:clear
                    php artisan migrate --force
                    php artisan db:seed --force
                '''
            }
        }

        stage('Execute Unit Tests') {
            steps {
                sh '''
                    export SESSION_DRIVER=array
                    export CACHE_DRIVER=array
                    export QUEUE_CONNECTION=sync
                    mkdir -p storage/framework/{sessions,views,cache}
                    chmod -R 777 storage/framework
                    ./vendor/bin/phpunit
                '''
            }
        }

        stage('Code Analysis') {
            steps {
                sh '''
                    mkdir -p build/logs
                    chmod -R 777 build/logs
                    ./vendor/bin/phploc app/ --log-csv build/logs/phploc.csv || true
                '''
            }
        }

        stage('Package Artifact') {
            steps {
                sh 'zip -qr php-todo.zip ${WORKSPACE}/*'
                archiveArtifacts artifacts: 'php-todo.zip', fingerprint: true
            }
        }

        stage('Upload Artifact to Artifactory') {
            steps {
                script {
                    def server = Artifactory.server 'artifactory-server'
                    def uploadSpec = """{
                        "files": [
                            {
                                "pattern": "php-todo.zip",
                                "target": "php-todo-local/php-todo",
                                "props": "type=zip;status=ready"
                            }
                        ]
                    }"""
                    server.upload spec: uploadSpec
                }
            }
        }

        stage('Deploy to Dev Environment') {
            when {
                expression { params.DEPLOY_TO_DEV == true }
            }
            steps {
                build job: 'ansible-config-mgt/master',
                      parameters: [
                          string(name: 'env', value: 'dev'),
                          booleanParam(name: 'DEPLOY_TO_DEV', value: false)
                      ],
                      wait: true,
                      propagate: false
            }
        }

        stage('SonarQube Quality Gate') {
            environment {
                scannerHome = tool 'SonarQubeScanner'
            }
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

