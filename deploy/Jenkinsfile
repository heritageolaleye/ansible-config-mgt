pipeline {
    agent any

    environment {
        ANSIBLE_CONFIG = "${WORKSPACE}/ansible.cfg"
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sshagent(credentials: ['ansible-ssh-key']) {
                    sh '''
                      ansible-playbook playbooks/site.yml
                    '''
                }
            }
        }
    }
}
