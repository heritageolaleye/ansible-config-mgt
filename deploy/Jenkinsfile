pipeline {
    agent any

    stages {
        // Step 1: Cleanup workspace
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }

        // Step 2: Checkout code from GitHub
        stage('Checkout SCM') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-token',
                    url: 'https://github.com/heritageolaleye/php-todo.git'
            }
        }
        
        // Step 3: Install dependencies and prepare environment
        stage('Install Dependencies') {
            steps {
                sh '''
                # Copy .env if missing
                cp .env.sample .env || true

                # Create storage and cache directories
                mkdir -p bootstrap/cache
                mkdir -p storage/framework/{sessions,views,cache} storage/logs
                chmod -R 777 storage bootstrap/cache

                # Install Composer dependencies including PHPLoc
                composer install --no-interaction --prefer-dist

                # Generate app key
                php artisan key:generate

                # Clear Laravel caches
                php artisan config:clear
                php artisan cache:clear
                '''
            }
        }

        // Step 4: Execute Unit Tests
        stage('Execute Unit Tests') {
            steps {
                sh '''
                # Ensure storage/framework directories exist
                mkdir -p storage/framework/sessions storage/framework/views storage/framework/cache
                chmod -R 777 storage/framework

                # Run PHPUnit tests
                ./vendor/bin/phpunit
                '''
            }
        }

        // Step 5: Code Analysis using local PHPLoc
        stage('Code Analysis') {
            steps {
                sh '''
                # Generate PHPLoc report using local dependency
                mkdir -p build/logs
                ./vendor/bin/phploc app/ --log-csv build/logs/phploc.csv
                '''
            }
        }
    }

    post {
        always {
            cleanWs() // Clean workspace after build
        }
    }
}





